@model List<Book>
@{
	var book = Model;
}
<a class="btn btn-success m-2" asp-action="Add" >Add new book</a>
<table class="table table-dark ">
	<thead>
		<tr>
			<td>Id</td>
			<td>Name</td>
			<td>Description</td>
			<td>Type</td>
			<td>Actions</td>
		</tr>
	</thead>
	<tbody>
		@{
			for (int i = 0; i < book.Count; i++)
			{
				<tr>
					<td>@(i + 1)</td>
					<td>@book[i].Name</td>
					<td>@book[i].Description</td>
					<td>@book[i].Type</td>
					<td>
						<a class="btn btn-success m-1" asp-action="Edit" asp-route-id="@book[i].Id">Edit</a>
						<a class="btn btn-primary m-1" asp-action="Show" asp-route-id="@book[i].Id">Show</a>
						<a class="btn btn-danger m-1" asp-action="Delete" asp-route-id="@book[i].Id">Delete</a>
					</td>
					
				</tr>
			}
			
		}
	</tbody>
</table>